<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header">My DevBlogg</div>
    <div class="top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog) { %>
                <div class="item" style="margin-top:">
                    <div class="image">
                        <img src= "<%= blog.image %>">
                    </div>
                    <div class="content">
                         <a class="header" href="/blogs/<%=blog._id %>"> <%= blog.title %> </a>
                         <div class="meta">
                             <span><%= blog.created.toDateString() %></span>
                         </div>
                         <div class="description">
                             <p> <%- blog.body.substring(0, 100) %>... </p>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/blogs/<%=blog._id %>"> <%= blog.title %>
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


<% include ./partials/footer %>